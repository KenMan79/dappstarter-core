{
  "name": "solidity",
  "title": "Solidity",
  "description": "",
  "imageUrl": "",
  "help": {
    "title": "",
    "url": ""
  },
  "blockchains": ["ethereum", "harmony", "klaytn"],
  "interface": {
    "hidden": false,
    "enabled": true,
    "children": "none"
  },
  "targets": {
    "*": {
      "/~languages/solidity/contracts/DappState.sol": {
        "processor": "merge-blocks",
        "path": "${categoryRoot}/${category}/${name}/solidity/${name}.sol"
      },
      "/~languages/solidity/contracts/DappLib.sol": {
        "processor": "merge-blocks",
        "path": "${categoryRoot}/${category}/${name}/solidity/${name}-lib.sol"
      },
      "/~languages/solidity/test/[block-tests].js": {
        "processor": "file-blocks",
        "path": "${categoryRoot}/${category}/${name}/solidity/${name}-tests.js",
        "sequence": false
      },

      "/~languages/solidity/migrations/2_deploy_contracts.js": {
        "processor": "merge-blocks",
        "path": "${categoryRoot}/${category}/${name}/${name}-config.js"
      },
      "/~languages/solidity/truffle-config.js": {
        "processor": "copy-file",
        "context": "blockchain",
        "actions": ["accounts"]
      },
      "/README.md": {
        "processor": "filter"
      },
      "/packages/client/.babelrc": {
        "processor": "filter"
      },

      "/packages/dapplib/src/lib/dapp-lib.js": {
        "processor": "merge-blocks",
        "path": "${categoryRoot}/${category}/${name}/${name}-lib.js"
      },
      "/packages/client/src/dapp/pages/[block-pages].js": {
        "processor": "file-blocks",
        "path": "${categoryRoot}/${category}/${name}/${name}-page.js",
        "sequence": false
      },
      "/packages/client/src/dapp/[client-app]": {
        "processor": "copy-folder",
        "context": "framework"
      },
      "/packages/client/src/dapp/pages/components/top-navigation.js": {
        "processor": "replace-parameters"
      },

      "/packages/dapplib/src/lib/[blockchain]": {
        "processor": "copy-folder",
        "context": "blockchain"
      },
      "/packages/dapplib/package.json": {
        "processor": "merge-json",
        "framework": {},
        "blockchain": {
          "*": {
            "scripts": {
              "postinstall": "truffle compile",
              "dev": "run-p ganache deploy",
              "deploy": "wait-on tcp:7545 && truffle compile && truffle migrate --reset",
              "ganache": "node scripts/ganache.js",
              "test": "npx truffle test"
            }
          },
          "ethereum": {
            "devDependencies": {
              "@truffle/hdwallet-provider": "1.0.32",
              "web3": "1.2.6"
            }
          },
          "harmony": {
            "devDependencies": {
              "@harmony-js/core": "^0.1.36"
            }
          },
          "klaytn": {
            "scripts": {
              "faucet": "node ./src/lib/faucet",
              "postinstall": "node ./src/lib/faucet"
            },
            "devDependencies": {
              "caver-js": "^1.3.2",
              "axios": "^0.19.2",
              "@truffle/hdwallet-provider": "1.0.32",
              "web3": "1.2.6"
            }
          },
          "tomochain": {
            "devDependencies": {
              "@truffle/hdwallet-provider": "1.0.29",
              "web3": "1.2.6"
            }
          }
        },
        "block": {
          "*": {},
          "file_storage:ipfs": {
            "devDependencies": {
              "ipfs-http-client": "41.0.0",
              "bs58": "4.0.1"
            }
          }
        }
      },
      "/packages/client/package.json": {
        "processor": "merge-json",
        "blockchain": {},
        "framework": {
          "*": {},
          "react": {
            "devDependencies": {
              "@babel/preset-react": "^7.8.3",
              "react": "^16.13.0",
              "react-dom": "^16.13.0",
              "react-redux": "^7.2.0",
              "react-router-dom": "^5.1.2",
              "redux": "^4.0.5"
            }
          },
          "vanilla": {
            "devDependencies": {
              "@fortawesome/fontawesome-free": "^5.11.2",
              "bootstrap-css-only": "^4.3.1"
            }
          }
        }
      }
    },
    "ethereum": {},
    "harmony": {},
    "klaytn": {}
  }
}
