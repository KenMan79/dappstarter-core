{
  "name": "@trycrypto/dappstarter",
  "version": "1.0.28",
  "workspaces": {
    "packages": [
      "packages/*",
      "workspace/*"
    ]
  },
  "scripts": {
    "prestart": "port-precheck 5000 5001 5002",
    "start": "lerna run dev --no-sort --stream --parallel",
    "migrate": "lerna run deploy --scope=@trycrypto/dappstarter-dapplib --stream",
    "dapp": "lerna run dev --scope=@trycrypto/dappstarter-client --stream",
    "dapp:prod": "lerna run build:prod",
    "server": "lerna run dev --scope=@trycrypto/dappstarter-server --stream",
    "test": "lerna run test $npm_config_script --scope=@trycrypto/dappstarter-dapplib --stream",
    "dev": "npm start"
  },
  "devDependencies": {
    "chalk": "^4.0.0",
    "detect-port": "^1.3.0",
    "lerna": "^3.21.0",
    "port-precheck": "https://github.com/trycrypto/port-precheck"
  }
}
